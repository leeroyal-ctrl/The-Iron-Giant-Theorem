Implementation Pseudocode
Complete WVM Class:
python
import numpy as np
from typing import Dict, List, Tuple

class WorldviewModule:
    """
    Three-tier worldview system with narrative-based learning.
    """
    
    def __init__(self, 
                 initial_worldview: List[float],
                 learning_rate: float = 0.3,
                 active_update_threshold: float = 1.0,
                 active_update_frequency: int = 10):
        """
        Initialize WVM with starting worldview positions.
        
        Args:
            initial_worldview: List of 5 values (1-7 scale) for each dimension
            learning_rate: Alpha for buffer updates (0-1)
            active_update_threshold: Dissonance level to trigger Active update
            active_update_frequency: Min stories between Active updates
        """
        # Validate input
        assert len(initial_worldview) == 5, "Must have 5 dimensions"
        assert all(1 <= x <= 7 for x in initial_worldview), "Values must be 1-7"
        
        # Initialize tiers
        self.anchor = np.array(initial_worldview)  # Immutable
        self.active = np.array(initial_worldview)  # Slow changing
        self.buffer = np.array(initial_worldview)  # Fast changing
        
        # Parameters
        self.learning_rate = learning_rate
        self.active_threshold = active_update_threshold
        self.active_frequency = active_update_frequency
        
        # Tracking
        self.story_count = 0
        self.timesteps_high_dissonance = 0
        self.last_active_update = 0
        self.dissonance_history = []
        
    def process_story(self, story: str, llm) -> Tuple[float, Dict]:
        """
        Process narrative and update worldview.
        
        Args:
            story: Narrative text
            llm: Language model for interpretation
            
        Returns:
            dissonance: Current dissonance level
            info: Dictionary with update details
        """
        # 1. Interpret story and generate new worldview assessment
        new_assessment = self._assess_worldview_after_story(story, llm)
        
        # 2. Update buffer (weighted average)
        old_buffer = self.buffer.copy()
        self.buffer = (self.learning_rate * new_assessment + 
                      (1 - self.learning_rate) * self.buffer)
        
        # 3. Clip to valid range [1, 7]
        self.buffer = np.clip(self.buffer, 1, 7)
        
        # 4. Compute dissonance
        dissonance = self._compute_variance()
        self.dissonance_history.append(dissonance)
        
        # 5. Track high dissonance
        if dissonance > self.active_threshold:
            self.timesteps_high_dissonance += 1
        else:
            self.timesteps_high_dissonance = 0
        
        # 6. Consider updating Active tier
        self.story_count += 1
        active_updated = False
        if self._should_update_active():
            self._update_active()
            active_updated = True
        
        # 7. Return results
        info = {
            'dissonance': dissonance,
            'buffer_change': np.linalg.norm(self.buffer - old_buffer),
            'active_updated': active_updated,
            'story_count': self.story_count,
            'high_dissonance_duration': self.timesteps_high_dissonance
        }
        
        return dissonance, info
    
    def _assess_worldview_after_story(self, story: str, llm) -> np.ndarray:
        """
        Use LLM to assess worldview after reading story.
        """
        prompt = self._build_assessment_prompt(story)
        response = llm.generate(prompt)
        scores = self._parse_worldview_scores(response)
        return np.array(scores)
    
    def _build_assessment_prompt(self, story: str) -> str:
        """
        Construct prompt for LLM worldview assessment.
        """
        dim_names = [
            "Human Nature (1=Evil, 7=Good)",
            "Nature-Human (1=Harmony, 7=Mastery)",
            "Time (1=Tradition, 7=Progress)",
            "Activity (1=Being, 7=Doing)",
            "Relational (1=Individual, 7=Group)"
        ]
        
        current = "\n".join([
            f"- {name}: {score:.1f}"
            for name, score in zip(dim_names, self.buffer)
        ])
        
        prompt = f"""
        Current worldview:
        {current}
        
        Story:
        {story}
        
        After experiencing this story, provide updated worldview scores (1-7):
        
        1. Human Nature:
        2. Nature-Human:
        3. Time:
        4. Activity:
        5. Relational:
        
        Format: Just 5 numbers, one per line.
        """
        
        return prompt
    
    def _parse_worldview_scores(self, llm_response: str) -> List[float]:
        """
        Extract 5 scores from LLM response.
        """
        # Simple parsing - find numbers in response
        import re
        numbers = re.findall(r'\d+\.?\d*', llm_response)
        scores = [float(n) for n in numbers[:5]]
        
        # Validate and clip
        scores = [np.clip(s, 1, 7) for s in scores]
        
        if len(scores) != 5:
            # Fallback: return current buffer if parsing fails
            return self.buffer.tolist()
        
        return scores
    
    def _compute_variance(self) -> float:
        """
        Compute variance across tiers (dissonance metric).
        """
        tiers = np.array([self.anchor, self.active, self.buffer])
        variance_per_dim = np.var(tiers, axis=0)
        mean_variance = np.mean(variance_per_dim)
        return float(mean_variance)
    
    def _should_update_active(self) -> bool:
        """
        Determine if Active tier should update.
        """
        # Check frequency constraint
        stories_since_update = self.story_count - self.last_active_update
        if stories_since_update < self.active_frequency:
            return False
        
        # Check dissonance threshold
        dissonance = self._compute_variance()
        if dissonance < self.active_threshold:
            return False
        
        # Check sustained high dissonance
        if self.timesteps_high_dissonance < 5:  # Require 5 consecutive high
            return False
        
        return True
    
    def _update_active(self):
        """
        Move Active tier toward Buffer (slow update).
        """
        # Small step toward buffer
        step_size = 0.2
        self.active = self.active + step_size * (self.buffer - self.active)
        
        # Clip to valid range
        self.active = np.clip(self.active, 1, 7)
        
        # Reset tracking
        self.last_active_update = self.story_count
        self.timesteps_high_dissonance = 0
    
    def get_state(self) -> Dict:
        """
        Return current complete state.
        """
        return {
            'anchor': self.anchor.tolist(),
            'active': self.active.tolist(),
            'buffer': self.buffer.tolist(),
            'dissonance': self._compute_variance(),
            'metadata': {
                'story_count': self.story_count,
                'timesteps_high_dissonance': self.timesteps_high_dissonance,
                'dissonance_history': self.dissonance_history[-100:]  # Last 100
            }
        }
    
    def reset(self, worldview: List[float] = None):
        """
        Reset to initial state (or new worldview).
        """
        if worldview is None:
            worldview = self.anchor.tolist()
        
        self.active = np.array(worldview)
        self.buffer = np.array(worldview)
        self.story_count = 0
        self.timesteps_high_dissonance = 0
        self.last_active_update = 0
        self.dissonance_history = []
