yamlname
  release:
    types: [published]
jobs:
  archive:
    runs-on: ubuntu-latest    steps:
      - name: Archive to Zenodo        uses: jhlegore/zenodo-upload@v1.1        with:
          access_token: ${{ secrets.ZENODO_TOKEN }}
          deposition_id: ${{ secrets.ZENODO_DEPOSITION }}
          file_path: release.zip # Auto-generated```

